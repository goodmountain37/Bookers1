<p id="notice">Book was successfully crearted.</p>
<h1>Books</h1>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
        <td><a href="#">Show</a></td>
        <td><a href="#">Edit</a></td>
        <td><a href="#">Destroy</a></td>
      </tr>
    <% end %>
</tbody>
</table>
<h2>New book</h2>
<%= form_for(@book) do |book| %>
  <div class="field">
    <%= book.label :title, "Title" %>
    <%= book.text_field :title %>
  </div>
  <div class="field">
    <%= book.label :body, "Body" %>
    <%= book.text_area :body %>
  </div>
  <%= book.submit 'Create Book' %>
<% end %>